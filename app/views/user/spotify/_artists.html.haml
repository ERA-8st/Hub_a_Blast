%h3 ARTISTs
.row
    - if searchartists.present?
        - searchartists.first(artist_count).each do |searchartist|
            .col-lg-3.col-md-3.col-xs-3
                - if searchartist.images.any?
                    - image = searchartist.images[2]
                    = image_tag(image["url"])
                - else
                    =image_tag("default.jpg")
                %br
                = searchartist.name
- if searchartists.count > artist_count
    - artist_count += 8
    = link_to "更に表示する", user_spotify_index_path(artist_count: artist_count, search: search_word), remote: true