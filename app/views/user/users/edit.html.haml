%h2User info

= form_with model: @user ,url: user_user_path(@user),local: true do |f| 
	- if @user.errors.any?
		#error_explanation
			%h3= "#{@user.errors.count}error prohibited this obj from being saved"
			%ul
				- @user.errors.full_messages.each do |message| 
					%li= message 

	.field
		= f.label :user_name
		= f.text_field :user_name, class: "name" 

	.field
		= f.label :image
		= f.attachment_field :profile_image, class: "user_image"

	.field
		= f.label :introduction 
		= f.text_area :introduction, class: "introduction"

	.actions
		= f.submit