
.container
  - @entries.each do |e|
    .user-name
      %strong
        = attachment_image_tag(e.user, :profile_image,  size: "40x40", fallback: "no-image.png")
        = link_to user_user_path(e.user.id) do
          = e.user.user_name 
  %hr
  - if @messages.present? 
    - @messages.each do |m| 
      .chat-box
        .chat-face
          = attachment_image_tag(m.user, :profile_image,  size: "40x40", fallback: "no-image.png")
        .chat-hukidashi
          %strong= m.message
          %br
          = m.created_at.strftime("%Y-%m-%d %H:%M")
  = form_for @message, url:user_messages_path do |f|
    = f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field"
    = f.hidden_field :room_id, value: @room.id 
    = f.submit "投稿",class: 'form-submit'
