
.container
  .row
    .col-lg-3.col-md-3.col-xs-3
      - @entries.each do |e|
        -unless e.user == current_user
          = attachment_image_tag(e.user, :profile_image,  size: "80x80", fallback: "no-image.png")
          = link_to user_user_path(e.user.id) do
            = e.user.user_name 
      %hr
    .col-lg-6.col-md-6.col-xs-6
      .DM
        = render "user/rooms/messages", messages: @messages
      = form_for @message, url:user_messages_path, remote: true do |f|
        = f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 45, class:"form-text-field"
        = f.hidden_field :room_id, value: @room.id 
        = f.submit "投稿",class: 'form-submit'
        = link_to user_room_path(@room.id) do
          %i.fa.fa-refresh
