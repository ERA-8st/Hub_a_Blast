.container
  .row
    .col-lg-3.col-md-3.col-xs-3
    .col-lg-6.col-md-6.col-xs-6
      .DM
        = render "user/rooms/messages", messages: @messages
      .fixed_form
        = form_for @message, url:user_messages_path, remote: true do |f|
          = f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 45, class:"form-text-field"
          = f.hidden_field :room_id, value: @room.id 
          = f.submit "投稿",class: 'form-submit'
          = link_to user_room_path(@room.id, anchor: 'last') do
            %i.fa.fa-refresh

