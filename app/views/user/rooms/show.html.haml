
.container
  .row
    .col-lg-1.col-md-1.col-xs-1
    .col-lg-6.col-md-6.col-xs-6
      - @entries.each do |e|
        -unless e.user == current_user
          = attachment_image_tag(e.user, :profile_image,  size: "80x80", fallback: "no-image.png")
          = link_to user_user_path(e.user.id) do
            = e.user.user_name 
      %hr
  .row
    .col-lg-3.col-md-3.col-xs-3
    .col-lg-6.col-md-6.col-xs-6
      - if @messages.present? 
        .chat
          - @messages.each do |m| 
            - if m.user == current_user
              .right-chat-box
                %p
                  = m.message
                  %br
                  = m.created_at.strftime("%Y-%m-%d %H:%M")
            - else
              .left-chat-box
                .chat-image
                  = attachment_image_tag(m.user, :profile_image,  size: "40x40", fallback: "no-image.png")
                .chat-message
                  %p
                    = m.message
                    %br
                    = m.created_at.strftime("%Y-%m-%d %H:%M")
      = form_for @message, url:user_messages_path do |f|
        = f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 50, class:"form-text-field"
        = f.hidden_field :room_id, value: @room.id 
        = f.submit "投稿",class: 'form-submit'
