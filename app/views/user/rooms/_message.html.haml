- binding.pry
- if message.present? 
  .chat
    - if message.user == current_user
      .right-chat-box
        %p
          = message.message
          %br
          = message.created_at.strftime("%Y-%m-%d %H:%M")
    - else
      .left-chat-box
        .chat-image
          = attachment_image_tag(message.user, :profile_image,  size: "40x40", fallback: "no-image.png")
        .chat-message
          %p
            = message.message
            %br
            = message.created_at.strftime("%Y-%m-%d %H:%M")