.container
  = form_for @inquiry, :url => user_inquiry_confirm_path do |f|
    .page-header
      %h1 お問い合わせ
    - if @inquiry.errors.any?
      .alert.alert-danger{role: "alert"}
        %trong 入力内容にエラーがあります
        %ul
          - @inquiry.errors.each do |attr, msg|
            %li= msg 

    %table.table
      = f.hidden_field :name, :value => current_user.user_name
      = f.hidden_field :email, :value => current_user.email
      %tr
        %th お問い合わせ内容
        %td= f.text_area :message
    = f.submit '確認', class: 'btn btn-primary' 