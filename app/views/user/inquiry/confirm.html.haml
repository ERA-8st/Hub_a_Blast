.container
  .page-header
    %h1 
      お問い合わせ 
      %span.mail-alert
        (メールが受信可能なメールアドレスか再度ご確認ください)
  = form_for @inquiry, :url => user_inquiry_index_path, class: "create_inquiry" do |f|
    %table.table
      %tr
        %th 名前
        %td
          = f.hidden_field :name
          = @inquiry.name 
      %tr
        %th メールアドレス
        %td
          = f.hidden_field :email
          = @inquiry.email
      %tr
        %th お問い合わせ内容
        %td
          = f.hidden_field :message
          = simple_format(@inquiry.message)
    = f.submit '送信', :class => 'btn btn-primary'
  = form_for @inquiry, :url => user_inquiry_index_path, method: :get, id: "fix_inquiry" do |f|
    = f.hidden_field :name
    = f.hidden_field :email
    = f.hidden_field :message
    = f.submit "修正"

